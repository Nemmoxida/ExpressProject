{
  "openapi": "3.0.0",
  "info": {
    "title": "My API",
    "version": "1.0.0",
    "description": "Dokumentasi Backend API untuk project UAS mata kuliah pemprogramam berbasis platform"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "Notes",
      "description": "API for accessing notes"
    },
    {
      "name": "Account",
      "description": "For auth, login, and accessing account list"
    },
    {
      "name": "Home",
      "description": "Welcome page"
    },
    {
      "name": "Pokemon",
      "description": "accessing pokemon database"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["Home"],
        "summary": "For welcome page",
        "responses": {
          "200": { "description": "" }
        }
      }
    },
    "/account/getAccouts": {
      "post": {
        "tags": ["Account"],
        "summary": "Get account by username",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" }
                },
                "required": ["username"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Account data retrieved" },
          "400": { "description": "No username detected" }
        }
      }
    },
    "/account/getAllAccouts": {
      "get": {
        "tags": ["Account"],
        "summary": "Get all accounts",
        "responses": {
          "200": { "description": "List of all accounts" }
        }
      }
    },
    "/account/login": {
      "post": {
        "tags": ["Account"],
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/account/signup": {
      "post": {
        "tags": ["Account"],
        "summary": "Sign up",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Account created" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/notes": {
      "get": {
        "tags": ["Notes"],
        "summary": "Get all notes",
        "responses": {
          "200": {
            "description": "List of notes"
          }
        }
      },
      "post": {
        "tags": ["Notes"],
        "summary": "Create a new note",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "content": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Note created"
          }
        }
      },
      "put": {
        "tags": ["Notes"],
        "summary": "Edit an existing note",
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "schema": { "type": "integer" },
            "required": true,
            "description": "ID of the note to edit"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "content": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Note updated"
          }
        }
      },
      "delete": {
        "tags": ["Notes"],
        "summary": "Delete a note",
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "schema": { "type": "integer" },
            "required": true,
            "description": "ID of the note to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Note deleted"
          }
        }
      }
    },
    "/pokemon": {
